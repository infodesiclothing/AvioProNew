    <script>
        $(window).on('load', function () {
            var jq = jQuery.noConflict();
            jq(document).ready(function () {
                $("#rslides").responsiveSlides({
                    auto: true,
                    pager: false,
                    nav: true,
                    speed: 500,
                    namespace: "callbacks",
                    before: function () {
                        $('.events').append("<li>before event fired.</li>");
                    },
                    after: function () {
                        $('.events').append("<li>after event fired.</li>");
                    }
                });
            });
        });
    </script>
    <script>
        $(function () {
